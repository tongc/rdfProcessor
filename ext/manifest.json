{
	"manifest_version": 2,
	"name": "RDFa Processor",
	"description": "For displaying RDFa tag contents in a user-friendly way",
	"version": "0.1",
	"browser_action": {
    	"default_icon": "icon.png",
    	"default_popup": "popup.html"
  	},
	"background": {
	    "persistent": true,
		"scripts": [
			"jquery-1.11.1.min.js",
			"bk.js"
		]
	},
  	"omnibox": { 
  		"keyword" : "RDFa"
	},
  	"icons": {
  		"16": "icon.png",
  		"32": "icon.png",
		"48": "icon.png",
    	"128": "icon.png"
  	},
  	"permissions": [
  		"http://*/",
		"https://*/",
    	"tabs",
    	"storage"
  	],
  	"content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["jquery-1.11.1.min.js", "main.js"]
      }
    ]
}